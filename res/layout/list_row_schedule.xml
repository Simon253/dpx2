<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    android:background="#EFDDA8"
    android:padding="6dip" >

    <LinearLayout
        android:id="@+id/proposalScheduleItem"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_margin="3dp"
        android:background="#E8AF33"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_margin="4dp"
            android:src="@drawable/profile_icon_default" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Tom" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/timeLocScheduleItem"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:layout_toRightOf="@id/proposalScheduleItem" >

        <LinearLayout
            android:id="@+id/fromTimeLocScheduleItem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="3dp"
            android:background="#39E330"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/fromLocName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Campuse UCI" />

            <LinearLayout
                android:id="@+id/fromTimeSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#12610E"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/fromTimeHrSchedule"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="13:00" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:src="@drawable/minusplus" />

                <TextView
                    android:id="@+id/fromTimeHrArd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="30 mins" />
            </LinearLayout>

            <TextView
                android:id="@+id/fromDateSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="04/12 Thur" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/toTimeLocScheduleItem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/fromTimeLocScheduleItem"
            android:background="#197A14"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/toLocName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ranch 99" />

            <LinearLayout
                android:id="@+id/toTimeSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#12610E"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/toTimeHrSchedule"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="16:00" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:src="@drawable/minusplus" />

                <TextView
                    android:id="@+id/fromTimeHrArd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="30 mins" />
            </LinearLayout>

            <TextView
                android:id="@+id/toDateSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="04/12 Thur" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/statScheduleItem"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/timeLocScheduleItem" >

        <LinearLayout
            android:id="@+id/hasDrvScheduleItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:orientation="vertical" >
<!-- 
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="CAR" />
 -->
            <ImageView
                android:id="@+id/hasCarIconScheduleItem"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="4dp"
                android:src="@drawable/has_car" />

            <TextView
                android:id="@+id/statSteasScheduleItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F7F305"
                android:layout_gravity="center_horizontal"
                android:text="4/5" />

            <ImageView
                android:id="@+id/joinScheduleItem"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="4dp"
                android:src="@drawable/join" />
"
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>